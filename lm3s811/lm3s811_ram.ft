HEX

0 SCR !
-1 BLOCK# !

VARIABLE TICKS

: SYSTICK-IRQ   1 TICKS +! ;I

: SYSTICK-ENABLE
    ['] SYSTICK-IRQ IVT 0E CELLS + !
    0 TICKS !
    #125000 STRELOAD !
    7 STCTRL !
;

0 100 NEWTASK T1
0 100 NEWTASK T2

TASK0 ONLYTASK
T1 ALSOTASK
T2 ALSOTASK

TASK0 AWAKE

: T1RUN
    T1 ACTIVATE
    BEGIN ." Task 1 " PAUSE AGAIN
;

: T2RUN
    T2 ACTIVATE
    BEGIN ." Task 2 " PAUSE AGAIN
;

\ T1RUN
\ T2RUN

ANSI-IO

ABORT
