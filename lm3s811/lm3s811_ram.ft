HEX

0 SCR !
-1 BLOCK# !
#125000 SYSTICKS/TICK !

0 100 NEWTASK T1
0 100 NEWTASK T2

TASK0 ONLYTASK
T1 ALSOTASK
T2 ALSOTASK

TASK0 AWAKE

: T1RUN
    T1 ACTIVATE
    BEGIN ." Task 1 " PAUSE AGAIN
;

: T2RUN
    T2 ACTIVATE
    BEGIN ." Task 2 " PAUSE AGAIN
;

ANSI-IO
SYSTICK-ENABLE

T1RUN
\ T2RUN

: TIMEOUT-TEST
    T1 SLEEP
    TICKS @ #1000 + T1 WAKE-AT 'S !
    STOP
;

ABORT
